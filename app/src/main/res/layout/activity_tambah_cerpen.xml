<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gmbr"
    tools:context=".tambah_cerpen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tfJudulTambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Masukkan Judul Cerrpen"
            android:inputType="textUri|textPersonName" />

        <EditText
            android:id="@+id/tfSumberTambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Masukkan Sumber Cerpen"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/tfIsiTambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Masukkan isi Cerpen"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnTambahCerpen"
            android:layout_width="187dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:background="@drawable/save" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>